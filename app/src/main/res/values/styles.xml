<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="app_logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/quiz_land_logo</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="main_activity_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/yellow_icon</item>
        <item name="android:textColor">@color/bluish</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

        <style name="DarthXabi">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/yellow_icon</item>
            <item name="android:layout_marginBottom">10dp</item>
        </style>
</resources>